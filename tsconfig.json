{
    "compilerOptions": {
        "resolveJsonModule": true,
        "target": "ES5",
        "module": "CommonJS",
        "inlineSourceMap": true,
        "rootDir": "./",
        "removeComments": true,
        "strict": true,
        "baseUrl": "./src",
        "outDir": "./dest",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "charset": "utf8",
        "declaration": true,
        "downlevelIteration": true
    },
    "include":["./src/**/*.ts"],
    "exclude": [
        "test/**/*.ts",
        "scripts/**/*.ts"
    ]
}
